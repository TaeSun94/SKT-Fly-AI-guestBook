<% include header %>

<h2>새 후기 작성</h2>

<form method="post" role="form">
  <div class="form-group">
    <label for="title">후기 제목</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="후기 제목입력해주세요." required>
  </div>
  <div class="form-group">
    <label for="body">후기 내용</label>
    <textarea class="form-control" id="body" name="body" placeholder="후기 내용 작성해주세요." rows="3" required></textarea>
  </div> 
  <div class="form-group">
    <input type="submit" value="후기 등록" class="btn btn-primary">
  </div>
</form>

<% include footer %>
